{
    "name": "gulp-project",
    "version": "2.2.0",
    "description": "Gulp Project",
    "main": "",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "start": "gulp watch",
        "commit": "git cz",
        "lint:css": "stylelint ./src/**/*.scss",
        "lint:js": "standard",
        "lint:fix": "stylelint --fix ./src/**/*.scss && standard --fix",
        "test:visual": "playwright test --config=playwright.config.mjs tests/visual",
        "test:visual-update": "playwright test --config=playwright.config.mjs tests/visual --update-snapshots",
        "test:e2e": "playwright test",
        "test": "playwright test",
        "build": "gulp build:production --production",
        "dev:clean": "gulp clean:dev",
        "build:clean": "gulp clean",
        "deploy": "gulp deploy",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tomasvn/gulp-project.git"
    },
    "author": "Ngoc Tu Nguyen",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tomasvn/gulp-project/issues"
    },
    "homepage": "https://github.com/tomasvn/gulp-project#readme",
    "devDependencies": {
        "@babel/preset-env": "^7.28.5",
        "@playwright/test": "^1.57.0",
        "@types/yargs": "^17.0.35",
        "browser-sync": "^3.0.4",
        "del": "^8.0.1",
        "git-cz": "^4.9.0",
        "gulp": "^5.0.1",
        "gulp-autoprefixer": "^10.0.0",
        "gulp-babel": "^8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-config-strip-debug": "^1.0.0",
        "gulp-cssnano": "^2.1.3",
        "gulp-if": "^3.0.0",
        "gulp-imagemin": "^9.2.0",
        "gulp-plumber": "^1.2.1",
        "gulp-rev": "^12.0.0",
        "gulp-rev-replace": "^0.4.4",
        "gulp-sass": "^6.0.1",
        "gulp-size": "^5.0.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-surge": "^0.1.4",
        "gulp-uglify": "^3.0.2",
        "gulp-useref": "^5.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.2",
        "playwright": "^1.57.0",
        "prettier": "^3.7.4",
        "standard": "^17.1.0",
        "stylelint": "^16.9.0",
        "stylelint-config-standard": "^36.0.1",
        "yargs": "^18.0.0"
    },
    "dependencies": {
        "pump": "^3.0.0",
        "sass": "^1.77.8"
    },
    "config": {
        "commitizen": {
            "path": "git-cz"
        }
    }
}
